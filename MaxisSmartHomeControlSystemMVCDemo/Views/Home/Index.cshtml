                    $('#MAXLite1_img').attr('src', 'images/icon_ML-1_on.png');
                    $('#MAXLite1_img').hover(function () {
                        $(this).css('cursor', 'pointer');
                    });
                    $("#MAXLite1_img").click(function () {
                        alert('MAXLite1_img btn clicked');
                        var url = '@Url.Action("Index", "MAXLite1DeviceList")';
                        location.href = url;
                    });
                    return true;
                },
                '16': function () {
                    MAXLite2_status = true;
                    $('#MAXLite2_img').attr('src', 'images/icon_ML-2_on.png');
                    $('#MAXLite2_img').hover(function () {
                        $(this).css('cursor', 'pointer');
                    });
                    $("#MAXLite2_img").click(function () {
                        alert('MAXLite2_img btn clicked');
                        var url = '@Url.Action("Index", "MAXLite2DeviceList")';
                        location.href = url;
                    });
                    return true;
                },
                '18': function () {
                    MAXLite3_status = true;
                    $('#MAXLite3_img').attr('src', 'images/icon_ML-3_on.png');
                    $('#MAXLite3_img').hover(function () {
                        $(this).css('cursor', 'pointer');
                    });
                    $("#MAXLite3_img").click(function () {
                        //alert('MAXLite3_img btn clicked');
                        var url = '@Url.Action("Index", "MAXLite3DeviceList")';
                        location.href = url;
                    });
                    return true;
                }
            };

            if (typeof stuff[condition] !== 'function') {
                return 'default';
            }

            return stuff[condition]();
        }
    });
</script>
