@Html.Hidden("loginUserName", Session["userName"])

<script>
    $(document).ready(function () {
        var getDevJsonList = JSON.parse('@Html.Raw(ViewBag.DeviceJsonList)');

        var MAXLite1_status = false, MAXLite2_status = false, MAXLite3_status = false;
        var MAXAir_status = false, MAXScene_status = false, MAXBook_status = false;
        //console.log("getDevJsonList = " + getDevJsonList);
        var loginUserName = $('#loginUserName').val();
        console.log("loginUserName = " + loginUserName);
        $('#showUserIDMenuTop').text(loginUserName + " ");

        $('.popr').popr();
        //$("#backBtn").click(function () {
        //    window.history.back();
        //});

        //initBleDeviceJson();

        function initBleDeviceJson() {
            for (var i = 0; i < getDevJsonList.length; ++i) {
                var bleId = getDevJsonList[i].BleID;
                var sn = getDevJsonList[i].BleSN;
                var bleName = getDevJsonList[i].BleName;

                console.log("bleId = " + bleId);
                console.log("sn =" + sn);
                console.log("bleName =" + bleName);

                var initDeviceStatus = setupBleDeviceStatus(bleId);
            }
        }

        function setupBleDeviceStatus(condition) {
            var stuff = {
                '0A': function () {
                    MAXBook_status = true;
                    $('#MAXBook_img').attr('src', 'images/icon_MB_on.png');
                    $('#MAXBook_img').hover(function () {
                        $(this).css('cursor', 'pointer');
                    });
                    $("#MAXBook_img").click(function () {
                        //alert('MAXBook_img btn clicked');
                        var url = '@Url.Action("Index", "MAXBookDeviceList")';
                        location.href = url;
                    });
                    return true;
                },
                '0B': function () {
                    MAXScene_status = true;
                    $('#MAXScene_img').attr('src', 'images/icon_MS_on.png');
                    $('#MAXScene_img').hover(function () {
                        $(this).css('cursor', 'pointer');
                    });
                    $("#MAXScene_img").click(function () {
                        //alert('MAXScene_img btn clicked');
                        var url = '@Url.Action("Index", "MAXSceneDeviceList")';
                        location.href = url
                    });
                    return true;
                },
                '13': function () {
                    MAXAir_status = true;
                    $('#MAXAir_img').attr('src', 'images/icon_MA_on.png');
                    $('#MAXAir_img').hover(function () {
                        $(this).css('cursor', 'pointer');
                    });
                    $("#MAXAir_img").click(function () {
                        //alert('MAXAir_img btn clicked');
                        var url = '@Url.Action("Index", "MAXAirDeviceList")';
                        location.href = url;
                    });
                    return true;
                },
                '14': function () {
