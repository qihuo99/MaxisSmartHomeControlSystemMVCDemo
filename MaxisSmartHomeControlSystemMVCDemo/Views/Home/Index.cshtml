@{
    ViewBag.Title = "Home Page";

    if (Session["userName"] == null)
    {
        Response.Redirect("~/Login");
    }
}
<style>
    html, body {
        height: 100%;
    }

    body {
        background-color: transparent;
        background-position: center center;
    }

    .HomeMainContent { /* this css should center and scale to fit the web page */
        background-color: transparent;
        border: 1px solid transparent;
        position: absolute;
        width: 60%;
        height: 60%;
        left: 0;
        top: 0;
        right: 0;
        bottom: 0px;
        margin: auto;
        text-align: center;
    }

    div.vertical {
        padding: 3px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .imgSixClass {
        bottom: 0px;
        margin: 0px;
        display: flex;
    }

    .imgSixClassText {
        vertical-align: top;
        font-size: 16px;
        bottom: 0px;
        margin: 0px 0px 0px 0px; /* margin-top, margin-right, margin-bottom, margin-left */
    }

    .imgSixClassVirtualText {
        vertical-align: bottom;
        font-size: 16px;
        bottom: 0px;
        margin: 0px 0px 0px 0px; /* margin-top, margin-right, margin-bottom, margin-left */
        padding: -65px 0px 0px 0px;
    }

    .titleContent {
        color: bisque;
        margin-top: 10px;
        float: right;
        /* margin: 0px 6px -12px -50px;  margin-top, margin-right, margin-bottom, margin-left */
    }

    .virtualholder {
        background: transparent;
        margin: 0px 0px 0px 0px;
        border: 6px dotted black;
        overflow: hidden;
        max-width: 134px;
        max-height: 83px;
        width: 135px;
        height: 85px;
        text-align: center;
    }
</style>
